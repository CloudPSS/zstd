{
  "name": "@cloudpss/zstd",
  "version": "0.1.8",
  "description": "Zstd n-api addon for node.js & wasm for browsers.",
  "author": "OpportunityLiu <opportunity@live.in>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudpss/zstd.git"
  },
  "keywords": [
    "zstd",
    "zstandard",
    "n-api",
    "wasm",
    "compression",
    "decompression",
    "compress",
    "decompress"
  ],
  "engines": {
    "node": ">=14.16"
  },
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/wasm.js",
  "exports": {
    ".": {
      "types": {
        "browser": "./dist/wasm.d.ts",
        "default": "./dist/index.d.ts"
      },
      "browser": "./dist/wasm.js",
      "default": "./dist/index.js"
    },
    "./wasm": {
      "types": "./dist/wasm.d.ts",
      "default": "./dist/wasm.js"
    },
    "./napi": {
      "types": "./dist/napi.d.ts",
      "default": "./dist/napi.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "default": "./dist/config.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "install": "node-gyp-build",
    "clean": "rimraf dist",
    "clean:gyp": "rimraf build prebuilds/*/*.node",
    "clean:wasm": "rimraf prebuilds/zstd.js",
    "build": "yarn clean && tsc",
    "build:deps": "pwsh lib/build.ps1",
    "build:gyp": "prebuildify --napi --strip",
    "build:wasm": "pwsh lib/build-wasm.ps1",
    "watch": "yarn clean && tsc --watch",
    "test": "cross-env \"NODE_OPTIONS=$NODE_OPTIONS --experimental-vm-modules\" jest",
    "prepare": "husky install",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "eslint --ext .js,.ts ."
  },
  "prettier": "@cloudpss/prettier-config",
  "commitlint": {
    "extends": "@cloudpss"
  },
  "devDependencies": {
    "@cloudpss/commitlint-config": "^1.3.2",
    "@cloudpss/eslint-config": "^1.3.2",
    "@cloudpss/lint-staged-config": "^1.3.2",
    "@cloudpss/prettier-config": "^1.3.2",
    "@cloudpss/tsconfig": "^1.3.2",
    "@types/jest": "^29.5.0",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prebuildify": "^5.0.1",
    "prebuildify-cross": "^5.0.0",
    "type-fest": "^3.8.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "node-addon-api": "^6.0.0",
    "node-gyp-build": "^4.6.0"
  }
}
