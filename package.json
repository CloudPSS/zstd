{
  "name": "@cloudpss/zstd",
  "version": "0.1.3",
  "description": "Zstd n-api addon for node.js & wasm for browsers.",
  "author": "OpportunityLiu <opportunity@live.in>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudpss/zstd.git"
  },
  "keywords": [
    "zstd",
    "zstandard",
    "n-api",
    "wasm",
    "compression",
    "decompression",
    "compress",
    "decompress"
  ],
  "engines": {
    "node": ">=14.16"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "browser": "dist/web.js",
  "exports": {
    ".": {
      "types": {
        "browser": "./src/web.ts",
        "default": "./src/index.ts"
      },
      "browser": "./dist/web.js",
      "default": "./dist/index.js"
    },
    "./wasm": {
      "types": "./src/web.ts",
      "default": "./dist/web.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "install": "node-gyp-build",
    "clean": "rimraf dist",
    "clean:gyp": "rimraf build prebuilds",
    "build": "yarn clean && tsc",
    "watch": "yarn clean && tsc --watch",
    "test": "node ./tests/index.js",
    "prepare": "husky install",
    "format": "prettier --ignore-path .gitignore --write .",
    "lint": "eslint --ext .js,.ts ."
  },
  "prettier": "@cloudpss/prettier-config",
  "commitlint": {
    "extends": "@cloudpss"
  },
  "devDependencies": {
    "@cloudpss/commitlint-config": "^1.3.2",
    "@cloudpss/eslint-config": "^1.3.2",
    "@cloudpss/lint-staged-config": "^1.3.2",
    "@cloudpss/prettier-config": "^1.3.2",
    "@cloudpss/tsconfig": "^1.3.2",
    "husky": "^8.0.3",
    "prebuildify": "^5.0.1",
    "prebuildify-cross": "^5.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "node-addon-api": "^6.0.0",
    "node-gyp-build": "^4.6.0"
  }
}
