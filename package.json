{
  "name": "@cloudpss/zstd",
  "version": "0.2.12",
  "description": "Zstd n-api addon for node.js & wasm for browsers.",
  "author": "OpportunityLiu <opportunity@live.in>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cloudpss/zstd.git"
  },
  "keywords": [
    "zstd",
    "zstandard",
    "n-api",
    "wasm",
    "compression",
    "decompression",
    "compress",
    "decompress"
  ],
  "engines": {
    "node": ">=14.16"
  },
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/wasm.js",
  "exports": {
    ".": {
      "types": {
        "browser": "./dist/wasm.d.ts",
        "default": "./dist/index.d.ts"
      },
      "browser": "./dist/wasm.js",
      "default": "./dist/index.js"
    },
    "./wasm": {
      "types": "./dist/wasm.d.ts",
      "default": "./dist/wasm.js"
    },
    "./napi": {
      "types": "./dist/napi.d.ts",
      "default": "./dist/napi.js"
    },
    "./config": {
      "types": "./dist/config.d.ts",
      "default": "./dist/config.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "install": "node-gyp-build",
    "clean": "rimraf dist",
    "clean:gyp": "rimraf build prebuilds/*/*.node",
    "clean:wasm": "rimraf prebuilds/zstd.js",
    "build": "pnpm clean && tsc",
    "build:deps": "pwsh lib/build.ps1",
    "build:gyp": "prebuildify --napi --target 18.18.2 --strip",
    "build:gyp-cross": "prebuildify-cross --napi --target 18.18.2 --strip",
    "build:wasm": "pwsh lib/build-wasm.ps1",
    "watch": "pnpm clean && tsc --watch",
    "test": "NODE_OPTIONS=\"${NODE_OPTIONS:-} --experimental-vm-modules\" jest",
    "benchmark": "node ./benchmark/index.js",
    "prepare": "husky install || echo Failed to initialize husky",
    "format": "prettier --cache --cache-strategy content --ignore-path .gitignore --write .",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/ --cache-strategy content --ext .js,.ts ."
  },
  "prettier": "@cloudpss/prettier-config",
  "commitlint": {
    "extends": "@cloudpss"
  },
  "devDependencies": {
    "@cloudpss/commitlint-config": "^2.0.0",
    "@cloudpss/eslint-config": "^2.0.0",
    "@cloudpss/lint-staged-config": "^2.0.0",
    "@cloudpss/prettier-config": "^2.0.0",
    "@cloudpss/tsconfig": "^2.0.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "node-gyp": "^10.0.1",
    "prebuildify": "^5.0.1",
    "prebuildify-cross": "^5.0.0",
    "pretty-bytes": "^6.1.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "node-addon-api": "^7.0.0",
    "node-gyp-build": "^4.6.1"
  }
}
